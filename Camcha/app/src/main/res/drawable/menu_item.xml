<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#0fff"/>
            <stroke android:width="1px" android:color="@color/dullGray" />
            <padding android:top="1px"
                android:left="-1px" android:bottom="1px" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#fff5f5f5" />
            <solid android:color="@color/brightGray" />
            <padding android:left="1px" android:right="1px" />
        </shape>
    </item>
</layer-list>


